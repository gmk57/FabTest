<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        style="@style/FabStyle"
        android:enabled="false"
        android:src="@drawable/ic_24dp"
        app:backgroundTint="@color/color_state_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:useCompatPadding="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text='android:enabled="false"'
        app:layout_constraintBottom_toBottomOf="@+id/fab1"
        app:layout_constraintStart_toEndOf="@+id/fab1"
        app:layout_constraintTop_toTopOf="@+id/fab1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        style="@style/FabStyle"
        android:src="@drawable/ic_24dp"
        app:backgroundTint="@color/color_state_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fab1"
        app:useCompatPadding="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text='setEnabled(false)'
        app:layout_constraintBottom_toBottomOf="@+id/fab2"
        app:layout_constraintStart_toEndOf="@+id/fab2"
        app:layout_constraintTop_toTopOf="@+id/fab2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3"
        style="@style/FabStyle"
        android:scaleType="center"
        android:src="@drawable/ic_60dp"
        app:backgroundTint="@color/color_state_list"
        app:fabCustomSize="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fab2"
        app:useCompatPadding="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text='android:scaleType="center"'
        app:layout_constraintBottom_toBottomOf="@+id/fab3"
        app:layout_constraintStart_toEndOf="@+id/fab3"
        app:layout_constraintTop_toTopOf="@+id/fab3" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab4"
        style="@style/FabStyle"
        android:src="@drawable/ic_60dp"
        app:backgroundTint="@color/color_state_list"
        app:fabCustomSize="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fab3"
        app:useCompatPadding="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text='setScaleType(ImageView.ScaleType.CENTER)'
        app:layout_constraintBottom_toBottomOf="@+id/fab4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fab4"
        app:layout_constraintTop_toTopOf="@+id/fab4" />

</androidx.constraintlayout.widget.ConstraintLayout>